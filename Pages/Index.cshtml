<!-- Formulaire de contact simplifié -->
<section class="py-5 form-contact" id="contact" data-aos="fade-up" data-aos-duration="2000">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2 class="section-title text-center display-5 fw-bold mb-5" data-aos="fade-down">
                    Une question ? Contactez-nous !
                </h2>

                <form method="post" class="contact-form" id="contactForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Contact.Nom" class="form-label">Nom complet *</label>
                            <input asp-for="Contact.Nom" class="form-control form-control-lg" placeholder="Veuillez saisir votre nom complet." required>
                            <span asp-validation-for="Contact.Nom" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Veuillez saisir votre nom complet.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Contact.Email" class="form-label">Email *</label>
                            <input asp-for="Contact.Email" type="email" class="form-control form-control-lg" placeholder="Veuillez saisir une adresse email valide." required>
                            <span asp-validation-for="Contact.Email" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Veuillez saisir une adresse email valide.
                            </div>
                        </div>
                    </div>

                    <!-- Champ téléphone optionnel -->
                    <div class="mb-3">
                        <label asp-for="Contact.Telephone" class="form-label">Téléphone (optionnel)</label>
                        <input asp-for="Contact.Telephone" type="tel" class="form-control form-control-lg" placeholder="06 12 34 56 78">
                        <span asp-validation-for="Contact.Telephone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Contact.Message" class="form-label">Votre message *</label>
                        <textarea asp-for="Contact.Message" class="form-control" rows="4"
                                  placeholder="Veuillez saisir votre message (minimum 10 caractères)." required></textarea>
                        <span asp-validation-for="Contact.Message" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Veuillez saisir votre message (minimum 10 caractères).
                        </div>
                    </div>

                    <!-- Informations sur les champs requis -->
                    <div class="mb-4">
                        <small class="">
                            <i class="bi bi-info-circle me-1"></i>
                            Les champs marqués d'un * sont obligatoires
                        </small>
                    </div>

                    <div class="text-center btn-sumbit-contact-from">
                        <button type="submit" id="submitBtn" class="btn btn-secondary btn-lg px-5" disabled>
                            <i class="bi bi-send me-2"></i>
                            <span class="btn-text">Envoyer le message</span>
                            <span class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

