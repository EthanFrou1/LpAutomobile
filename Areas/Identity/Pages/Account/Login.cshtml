@page
@model LoginModel
@{
    ViewData["Title"] = "Connexion";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="w-full max-w-md bg-white rounded-xl shadow-md p-6 space-y-6">
        <h1 class="text-2xl font-bold text-center text-gray-800">Connexion à l'espace admin</h1>

        <form method="post" class="space-y-4">
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input asp-for="Input.Email" class="mt-1 w-full px-4 py-2 border rounded-md shadow-sm focus:ring focus:ring-blue-300" />
                <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                <input asp-for="Input.Password" class="mt-1 w-full px-4 py-2 border rounded-md shadow-sm focus:ring focus:ring-blue-300" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center">
                <input asp-for="Input.RememberMe" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-gray-700">Se souvenir de moi</label>
            </div>

            <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition">
                Se connecter
            </button>
        </form>

        <div class="text-center text-sm text-gray-600">
            <a asp-page="./ForgotPassword" class="text-blue-600 hover:underline">Mot de passe oublié ?</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
